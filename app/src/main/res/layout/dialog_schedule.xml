<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/dialog_schedule_stadium"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/dialog_schedule_stadiumname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stadium"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_schedule_stadium"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dialog_schedule_stadium_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/dialog_schedule_stadiumname"
            android:textSize="8sp"/>



        <RelativeLayout
            android:id="@+id/dialog_schedule_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_schedule_stadiumname"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/dialog_schedule_hometeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Team"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/dialog_schedule_at_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vs"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/dialog_schedule_awayteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Away Team"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/dialog_schedule_hometeam_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/dialog_schedule_awayteam"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/dialog_schedule_awayteam_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@id/dialog_schedule_awayteam"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_schedule_devision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Division"
            android:layout_below="@id/dialog_schedule_teams"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/dialog_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd-MM hh:mm TZ"
            android:layout_below="@id/dialog_schedule_devision"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_schedule_time"
            android:layout_marginTop="20dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp">

            <Button
                android:id="@+id/dialog_schedule_tickets"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Tickets"
                android:textSize="12sp"
                android:backgroundTint="@color/button"/>

            <Button
                android:id="@+id/dialog_schedule_accomodation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Accomodation"
                android:layout_below="@id/dialog_schedule_tickets"
                android:textSize="12sp"
                android:backgroundTint="@color/button"/>

            <Button
                android:id="@+id/dialog_schedule_roster"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Roster"
                android:layout_below="@id/dialog_schedule_accomodation"
                android:textSize="12sp"
                android:backgroundTint="@color/button"/>

            <Button
                android:id="@+id/dialog_schedule_scoring"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Scoring"
                android:layout_below="@id/dialog_schedule_roster"
                android:textSize="12sp"
                android:backgroundTint="@color/button"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>