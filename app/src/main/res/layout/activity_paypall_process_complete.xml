<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/paypall_process_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/relative_layout_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_gray"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/relative_layout_confirm_purchase_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:text="Confirm your purchase">
            </TextView>
            <TextView
                android:id="@+id/relative_layout_confirm_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/relative_layout_confirm_purchase_TV"
                android:text="Purchase number ID:\nAmount payed:">
            </TextView>
            <Button
                android:id="@+id/relative_layout_confirm_payment"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/relative_layout_confirm_details"
                android:backgroundTint="@color/button"
                android:text="Pay Now">
            </Button>
            <Button
                android:id="@+id/relative_layout_cancel_payment"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_alignBaseline="@id/relative_layout_confirm_payment"
                android:layout_below="@id/relative_layout_confirm_details"
                android:backgroundTint="@color/button"
                android:text="Cancel">
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/relative_layout_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/relative_layout_successMessage_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="You successfully purchased a ticket for"
                android:textColor="@color/white"
                android:backgroundTint="@color/green">
            </TextView>

            <RelativeLayout
                android:id="@+id/dialog_schedule_teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_layout_successMessage_TV"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/dialog_schedule_hometeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Team"
                    android:layout_alignParentStart="true"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/dialog_schedule_at_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="vs"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/dialog_schedule_awayteam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Away Team"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_marginRight="12dp"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/dialog_schedule_hometeam_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/dialog_schedule_awayteam"
                    android:layout_marginLeft="12dp"
                    android:layout_alignLeft="@+id/dialog_schedule_hometeam"
                    android:layout_alignRight="@+id/dialog_schedule_hometeam"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/dialog_schedule_awayteam_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_below="@id/dialog_schedule_awayteam"
                    android:layout_marginRight="12dp"
                    android:layout_alignLeft="@id/dialog_schedule_awayteam"
                    android:layout_alignRight="@id/dialog_schedule_awayteam"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/dialog_ticket_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/dialog_schedule_teams"
                android:textStyle="bold"
                android:text="Game is on Date" />
            <TextView
                android:id="@+id/dialog_ticket_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"

                android:layout_below="@id/dialog_ticket_date"
                android:text="Ticket \n Zone: zone_name \n box: box_number" />
            <Button
                android:id="@+id/relative_layout_jump_to_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button"
                android:text="Show my ticket"
                android:layout_below="@id/dialog_ticket_preview"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true">
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/relative_layout_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/relative_layout_success">
        <RelativeLayout
            android:id="@+id/relative_layout_failed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/relative_layout_failMessage_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="Something went wrong, transaction cancelled."
                android:textColor="@color/white"
                android:backgroundTint="@color/red">
            </TextView>
            <TextView
                android:id="@+id/relative_layout_fail_errorMessage_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/relative_layout_failMessage_TV"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:text="An error message">
            </TextView>
            <Button
                android:id="@+id/relative_layout_back_to_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to schedule"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/relative_layout_fail_errorMessage_TV"
                android:backgroundTint="@color/button"
                android:layout_centerHorizontal="true">
            </Button>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>