<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roster_player_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:backgroundTint="@color/bgndCard"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cardroster_player_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="8dp">
        </ImageView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/cardroster_player_image"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/cardroster_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="PlayerName"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="16sp">
            </TextView>

            <TextView
                android:id="@+id/cardroster_player_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:layout_below="@id/cardroster_player_name"
                android:layout_alignLeft="@id/cardroster_player_name"
                android:textColor="@color/white">
            </TextView>

            <TextView
                android:id="@+id/cardroster_player_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/white"
                android:text="Nr"
                android:textSize="20sp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>