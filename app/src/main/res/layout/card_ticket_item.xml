<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_ticket_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:backgroundTint="@color/bgndCard"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ticket_home_logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/ticket_home_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hometeam"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ticket_home_logo"
            android:layout_alignLeft="@id/ticket_home_logo"
            android:layout_alignRight="@id/ticket_home_logo"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tickets_vs_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ticket_home_logo"
            android:layout_alignBottom="@+id/ticket_home_logo"
            android:layout_toRightOf="@id/ticket_home_logo"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="vs"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="40dp"
            android:textStyle="normal"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/ticket_away_logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/tickets_vs_txt"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/ticket_away_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="awayteam"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/ticket_away_logo"
            android:layout_alignRight="@+id/ticket_away_logo"
            android:layout_below="@+id/ticket_away_logo"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/ticket_gamedetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="awayteam"
            android:textStyle="normal"
            android:textSize="12sp"
            android:layout_alignLeft="@+id/ticket_home_logo"
            android:layout_below="@+id/ticket_home_txt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
        />
        <ImageView
            android:id="@+id/ticket_qrcode"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>