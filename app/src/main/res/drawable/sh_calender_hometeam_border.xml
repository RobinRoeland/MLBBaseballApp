<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color of the CardView -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/teamHome" /> <!-- Set your background color here -->
        </shape>
    </item>

    <!-- Border for the CardView -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/teamBorder"
                android:width="2dp"/>
        </shape>
    </item>
</layer-list>